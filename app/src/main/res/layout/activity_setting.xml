<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SettingActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="60dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:text="Âm thanh"/>

            <Switch
                android:id="@+id/switch_soundchip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Volume"/>
            <SeekBar
                android:id="@+id/seekbar_volume"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Left "/>
            <SeekBar
                android:id="@+id/seekbar_sound"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:text="Right "/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Chế độ ban đêm"/>

            <Switch
                android:id="@+id/setbackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Hẹn giờ tắt:"/>

            <TextClock
                android:id="@+id/editTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:format24Hour="hh:mm:ss"
                android:inputType="time" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#C8B9D1">
        <TextView
            android:id="@+id/txv_namesong"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:text="Tên Bài Hát"/>
        <ImageButton
            android:id="@+id/bt_like"
            android:background="#C8B9D1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="10dp"
            android:src="@drawable/ic_like"
            android:scaleType="fitStart"/>
        <ImageButton
            android:id="@+id/bt_pause"
            android:background="#C8B9D1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="10dp"
            android:src="@drawable/ic_pause"
            android:scaleType="fitXY"/>
        <ImageButton
            android:id="@+id/bt_next"
            android:background="#C8B9D1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="10dp"
            android:src="@drawable/ic_next"
            android:scaleType="fitXY"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@color/gray">


        <ImageButton
            android:id="@+id/iB_home"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/homee"
            android:scaleType="fitXY"
            android:backgroundTint="@color/gray"
            android:paddingTop="10dp"/>


        <ImageButton
            android:id="@+id/iB_library"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/libraryy"
            android:scaleType="fitXY"
            android:backgroundTint="@color/gray"
            android:paddingTop="10dp"
            android:layout_marginLeft="25dp"/>

        <ImageButton
            android:id="@+id/iB_find"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/findd"
            android:scaleType="fitXY"
            android:backgroundTint="@color/gray"
            android:paddingTop="10dp"
            android:layout_marginLeft="25dp"/>

        <ImageButton
            android:id="@+id/iB_settings"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/settingss"
            android:scaleType="fitXY"
            android:backgroundTint="#DCBDBB"
            android:paddingTop="10dp"
            android:layout_marginLeft="25dp"/>
    </LinearLayout>

</LinearLayout>